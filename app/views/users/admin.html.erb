<div class="center jumbotron">
  <div class="text-center">
    <h1>Inloggning som Admin</h1>
  </div>
</div>

<% if flash[:notice] %>
<div class = "notice">
  <%= flash[:notice] %>
</div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-5">
  <%= form_tag(admin_login_path, method: "post")  do %>
  <p><%= label_tag(:email, "E-mail") %></p>
  <p><%= email_field_tag(:email) %></p>
  
  <p><%= label_tag(:password, "Lösenord") %></p>
  <p><%= password_field_tag(:password) %></p>
    
  <p><%= label_tag(:admin_auth, "Adminkod") %></p>
  <p><%= password_field_tag(:admin_auth) %></p>
  
  <p><%= submit_tag("Logga in") %></p>
  <% end %>

<%= link_to "Logga in som vanlig användare", root_path %><br>
<%= link_to "Registrera ny användare", new_user_path %>
      </div>
</div>